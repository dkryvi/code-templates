// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

model Author {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name      String   @unique
  picture   String
  Post      Post[]
  updatedAt DateTime @updatedAt
}

model Collection {
  id         String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title      String   @unique
  excerpt    String?
  coverImage String?
  tags       String[]
  slugs      String[]
  updatedAt  DateTime @updatedAt
}

model CollectionDictionary {
  id         String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title      String   @unique
  excerpt    String
  coverImage String
  updatedAt  DateTime @updatedAt
}

model OgImage {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  url       String   @unique
  Post      Post[]
  updatedAt DateTime @updatedAt
}

model Post {
  id         String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  slug       String   @unique
  title      String
  date       String
  tags       String[]
  coverImage String?
  author     Author   @relation(fields: [authorId], references: [id])
  authorId   String   @db.ObjectId
  excerpt    String
  ogImage    OgImage  @relation(fields: [ogImageId], references: [id])
  content    String
  ogImageId  String   @db.ObjectId
  updatedAt  DateTime @updatedAt
}
